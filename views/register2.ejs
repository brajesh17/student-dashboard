<style>
    body {
        margin: 0;
        padding: 0;
        animation: bgcolor infinite 5s;
    }

    @keyframes bgcolor {
        0% {
            background: #eccc68;
        }

        20% {
            background: #ff7f50;
        }

        40% {
            background: #ff6348;
        }

        60% {
            background: #ff6b81;
        }

        80% {
            background: #feca57;
        }

        100% {
            background: #eccc68;
        }
    }
</style>

<body>
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body text-center">
                <p style="font-size:60px; font-family: 'freestyle script';margin-left: 35px;">Student Dashboard</p>
                <h1><i class="fas fa-yin-yang fa-3x"></i></h1>
               
            <form action="/user/register2" method="POST">
                <div class="form-group">
                    <label for="key">Enter Special Key</label>
                    <input type="password" id="key" name="key" class="form-control" placeholder="Enter Key"
                        value="<%= typeof key != 'undefined' ? key : '' %>" />
                </div>
                <button type="submit" class="btn btn-primary btn-block">
                    Submit
                </button>
                
            </form>
           
            </div>
        </div>
    </div>
</body>